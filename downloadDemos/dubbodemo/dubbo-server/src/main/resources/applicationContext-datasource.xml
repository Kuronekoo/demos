    <bean id="SessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <!-- 自动扫描domain目录, 省掉Configuration.xml里的手工配置 -->
        <property name="typeAliasesPackage" value="com.yunji.oa.domain" />
        <!-- 显式指定Mapper文件位置 -->
        <property name="mapperLocations" value="classpath:/mybatis/*.xml" />
    </bean> 
    
    <!-- 扫描basePackage下接口 自动生成代理实现类 -->
    <mybatis:scan base-package="com.yunji.oa.dao" factory-ref="SessionFactory" />    
    
    <bean id="SqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
    	<constructor-arg index="0" ref="SessionFactory"></constructor-arg>
    </bean>
    
    
	
